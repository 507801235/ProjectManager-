<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:elevation="5dp"
    android:foreground="?selectableItemBackground">

    <TextView
        android:id="@+id/claim_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="土间埋"
        android:textColor="@color/mid_green"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/report_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="2020-10-24"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/report_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="report_content"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/claim_nickname"
        app:layout_constraintTop_toBottomOf="@+id/claim_nickname" />

    <TextView
        android:id="@+id/work_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="工作时间:"
        android:textColor="@color/mid_green"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/claim_nickname"
        app:layout_constraintTop_toBottomOf="@+id/report_content" />

    <TextView
        android:id="@+id/work_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="4"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/work_title"
        app:layout_constraintTop_toTopOf="@+id/work_title" />

    <TextView
        android:id="@+id/rest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="剩余工时:"
        android:textColor="@color/mid_green"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/work_hour"
        app:layout_constraintTop_toTopOf="@+id/work_title" />

    <TextView
        android:id="@+id/rest_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="2"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/rest_title"
        app:layout_constraintTop_toTopOf="@+id/work_title" />

    <TextView
        android:id="@+id/task_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="未完成"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/work_title" />
</androidx.constraintlayout.widget.ConstraintLayout>